<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:padding="24dp">

    <TextView
        android:id="@+id/txt_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hompage"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="100dp" />
    <TextView
        android:id="@+id/txt_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_home"
        android:layout_marginTop="30dp"
        android:textSize="24sp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/txt_your1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_welcome"
        android:layout_marginTop="12dp"
        android:textSize="24sp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/txt_your2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_your1"
        android:layout_marginTop="12dp"
        android:textSize="24sp"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/button_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_editor_absoluteY="560dp"
        app:layout_constraintTop_toBottomOf="@id/txt_your2"
        android:layout_marginTop="260dp"
        android:text="Logout"
        android:background="@drawable/button_border"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>